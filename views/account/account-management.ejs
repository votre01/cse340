<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p><%- accountLogin %></p>
<a href="/account/edit/<%= locals.accountData.account_id %>">Update Account Information</a> 

<% if (locals.accountData.account_type != "Client") { %>
  <h3>Inventory Management</h3>
  <a href="/inv/">Manage Inventory</a>  
<% } %>